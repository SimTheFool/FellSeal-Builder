{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["./utils/*"],
      "@domain/*": ["./domain/*"],
      "@adapters/*": ["./adapters/test/*"],
      "@fixtures/*": ["./fixtures/*"],
      "@applicative/*": ["./applicative/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "build-*"],
  "references": [{ "path": "../utils/" }]
}
