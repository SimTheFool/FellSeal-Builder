{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node16",
    "target": "ES6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "src",
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "@domain/*": ["./domain/*"]
    }
  },
  "exclude": ["node_modules", "build-*"],
  "references": [{ "path": "../utils/" }]
}
